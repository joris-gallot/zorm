{
  "name": "@zorm-ts/svelte",
  "type": "module",
  "version": "0.2.1",
  "description": "Svelte integration for zorm",
  "author": "Joris Gallot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joris-gallot/zorm.git"
  },
  "keywords": [
    "typescript",
    "orm",
    "svelte",
    "schema-validation",
    "type-inference",
    "runtime-validation",
    "zod"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@zorm-ts/core": "workspace:>=0.2.1",
    "svelte": "catalog:svelte"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "catalog:svelte",
    "@types/node": "catalog:types",
    "@vitest/browser-playwright": "catalog:test",
    "typescript": "catalog:types",
    "unbuild": "catalog:",
    "vitest-browser-svelte": "catalog:svelte",
    "zod": "catalog:"
  }
}
