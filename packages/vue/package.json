{
  "name": "@zorm-ts/vue",
  "type": "module",
  "version": "0.2.1",
  "description": "Vue integration for zorm",
  "author": "Joris Gallot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joris-gallot/zorm.git"
  },
  "keywords": [
    "typescript",
    "orm",
    "vue",
    "schema-validation",
    "type-inference",
    "runtime-validation",
    "zod"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "@zorm-ts/core": "workspace:>=0.2.1",
    "vue": "catalog:vue"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "@vitejs/plugin-vue": "catalog:vue",
    "typescript": "catalog:types",
    "unbuild": "catalog:",
    "vitest-browser-vue": "catalog:vue",
    "vue-tsc": "catalog:vue",
    "zod": "catalog:"
  }
}
