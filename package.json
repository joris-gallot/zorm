{
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "24.12.0"
  },
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint packages",
    "lint:all": "eslint",
    "lint:fix": "eslint --fix packages",
    "lint:fix:all": "eslint --fix",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @zorm-ts/core build",
    "build:vue": "pnpm --filter @zorm-ts/vue build",
    "build:vue:watch": "pnpm --filter @zorm-ts/vue build --watch",
    "build:svelte": "pnpm --filter @zorm-ts/svelte build",
    "build:solidjs": "pnpm --filter @zorm-ts/solidjs build",
    "publish:core": "sh scripts/publish.sh core",
    "publish:vue": "sh scripts/publish.sh vue",
    "publish:svelte": "sh scripts/publish.sh svelte",
    "publish:solidjs": "sh scripts/publish.sh solidjs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@vitest/browser": "catalog:test",
    "@vitest/coverage-istanbul": "catalog:test",
    "@vitest/ui": "catalog:test",
    "eslint": "catalog:lint",
    "playwright": "catalog:test",
    "vitest": "catalog:test"
  }
}
