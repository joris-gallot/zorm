{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "automergeType": "branch",
  "ignoreDeps": [
    "svelte",
    "vue",
    "solid-js",
    "zod"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@types/node"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false
    },
    {
      "groupName": "vitest packages",
      "matchPackagePatterns": [
        "^@vitest/",
        "^vitest$"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
